@model PracticaBiblioteca.ViewModels.LoginViewModel

<div class="body"></div>
<div class="grad"></div>
<div class="header">
    <div>Biblioteca<span class="highlight-green">UT</class></div>
</div>
<div class="login">
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group">
            <input asp-for="NombreUsuario" class="login-input" placeholder="Nombre de Usuario" />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Contrasena" class="login-input" type="password" placeholder="Contraseña" />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>
        <button type="submit" class="login-button">Iniciar Sesión</button>
        <div class="mt-3">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Regresar a la Página Principal</a>
        </div>
    </form>
</div>

@model IEnumerable<PracticaBiblioteca.Models.Categorium>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Categorías</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Categorías</h1>
        </header>

        <nav class="actions">
            <a asp-action="Create" class="btn btn-primary">Crear nueva categoría</a>
        </nav>

        <main>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                                <td class="actions">
                                    <a href="@Url.Action("Edit", new { id = item.IdCategoria })" class="btn btn-sm btn-secondary">Editar</a>
                                    <a href="@Url.Action("Details", new { id = item.IdCategoria })" class="btn btn-sm btn-info">Detalles</a>
                                    <a href="@Url.Action("Delete", new { id = item.IdCategoria })" class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>
@model IEnumerable<PracticaBiblioteca.Models.Categorium>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorías</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Crear nuevo registro</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdCategoria">Editar</a>
 
                    <a asp-action="Details" asp-route-id="@item.IdCategoria"> Detalles </a> 
                    <a asp-action="Delete" asp-route-id="@item.IdCategoria"> Eliminar </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


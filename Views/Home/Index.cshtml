@{
    var userRole = ViewData["UserRole"] as string;
}

<h1>Welcome to the Home Page!</h1>

@if (userRole == "Admin")
{
    <p>You are logged in as an Admin.</p>
    <a asp-controller="Admin" asp-action="AdminDashboard">Go to Admin Dashboard</a>
}

@if (userRole == "Usuario")
{
    <p>You are logged in as a Usuario.</p>
    <a asp-controller="User" asp-action="UserDashboard">Go to User Dashboard</a>
}

@if (userRole == "Unknown")
{
    <p>Please log in to see more options.</p>
}

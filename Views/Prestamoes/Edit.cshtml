@model PracticaBiblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar un registro</h1>

<h4>Prestamos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPrestamo" />
            <div class="form-group">
                <label asp-for="IdEstadoPrestamo" class="control-label"></label>
                <select asp-for="IdEstadoPrestamo" class="form-control" asp-items="ViewBag.IdEstadoPrestamo"></select>
                <span asp-validation-for="IdEstadoPrestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPersona" class="control-label"></label>
                <select asp-for="IdPersona" class="form-control" asp-items="ViewBag.IdPersona"></select>
                <span asp-validation-for="IdPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLibro" class="control-label"></label>
                <select asp-for="IdLibro" class="form-control" asp-items="ViewBag.IdLibro"></select>
                <span asp-validation-for="IdLibro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDevolucion" class="control-label"></label>
                <input asp-for="FechaDevolucion" class="form-control" />
                <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaConfirmacionDevolucion" class="control-label"></label>
                <input asp-for="FechaConfirmacionDevolucion" class="form-control" />
                <span asp-validation-for="FechaConfirmacionDevolucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoEntregado" class="control-label"></label>
                <input asp-for="EstadoEntregado" class="form-control" />
                <span asp-validation-for="EstadoEntregado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoRecibido" class="control-label"></label>
                <input asp-for="EstadoRecibido" class="form-control" />
                <span asp-validation-for="EstadoRecibido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
